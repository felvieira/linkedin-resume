extends layout

block content
    // Begin Wrapper
    #wrapper
      .wrapper-top
      .wrapper-mid
        // Begin Paper
        #paper
          .paper-top
          #paper-mid
            .entry
              // Begin Image
              img.portrait(src='#{result.imgProfile}', alt='John Smith')
              // End Image
              // Begin Personal Information
              .self
                h1.name
                  | #{result.name} 
                  br
                  span #{result.job}
                ul
                  li.ad #{result.city}
                  li.mail johnsmith@business.com
                  li.tel +11 444 555 22 33
                  li.web www.businessweb.com
              // End Personal Information
              // Begin Social
              .social
                ul
                  li
                    a.north(href='#', title='Download .pdf')
                      img(src='images/icn-save.jpg', alt='Download the pdf version')
                  li
                    a.north(href='javascript:window.print()', title='Print')
                      img(src='images/icn-print.jpg', alt='')
                  //- li
                  //-   a#contact.north(href='contact/index.html', title='Contact Me')
                  //-     img(src='images/icn-contact.jpg', alt='')
                  //- li
                  //-   a.north(href='#', title='Follow me on Twitter')
                  //-     img(src='images/icn-twitter.jpg', alt='')
                  //- li
                  //-   a.north(href='#', title='My Facebook Profile')
                  //-     img(src='images/icn-facebook.jpg', alt='')
              // End Social
              // Begin 1st Row
              .entry
                h2 Perfil
                p
                  | #{result.resume}
              // End 1st Row
              // Begin 2nd Row
              .entry
                h2 Formação acadêmica
                each item in result.educational
                  .content
                    h3
                      = item.educationalData
                    p
                      = item.educationalEnterprise
                      br
                      em
                      = item.educationalName
              // End 2nd Row
              // Begin 3rd Row
              .entry
                h2 EXPERIÊNCIA PROFISSIONAL
                each item in result.jobs
                  .content
                    h3 
                      = item.data
                      br
                      = item.range
                    p
                      = item.enterprise
                      br
                      em 
                        = item.position
                    ul.info
                      li 
                        = item.details
